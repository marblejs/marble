{
  "name": "marblejs",
  "description": "Reactive Node APIs made easy",
  "scripts": {
    "postinstall": "yarn build",
    "build": "lerna link && lerna bootstrap --hoist",
    "benchmark": "make -C benchmarks",
    "watch": "lerna run --parallel --stream watch",
    "lint": "tslint --config tslint.json",
    "test": "jest --expand",
    "test:coverage": "SCOPE=unit jest --expand --coverage",
    "test:watch": "jest --expand --onlyChanged --watch",
    "clean": "lerna run clean",
    "prepare": "yarn test",
    "publish": "lerna publish",
    "precommit": "lint-staged"
  },
  "private": true,
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "git add",
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marblejs/marble.git"
  },
  "engines": {
    "node": ">= 8.0.0",
    "yarn": ">= 1.7.0",
    "npm": ">= 5.0.0"
  },
  "keywords": [
    "API",
    "JavaScript",
    "RxJs",
    "TypeScript",
    "Reactive"
  ],
  "authors": [
    "JÃ³zef Flakus"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marblejs/marble/issues"
  },
  "homepage": "https://github.com/marblejs/marble#readme",
  "dependencies": {
    "rxjs": "~6.2.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/mock-fs": "^3.6.30",
    "@types/supertest": "^2.0.4",
    "@types/webpack": "^4.4.11",
    "@types/webpack-merge": "^4.1.3",
    "@types/webpack-node-externals": "^1.6.3",
    "husky": "^0.14.0",
    "jest": "^23.5.0",
    "lerna": "^3.3.0",
    "lint-staged": "^7.2.2",
    "mock-fs": "^4.5.0",
    "mock-req": "^0.2.0",
    "rimraf": "^2.6.2",
    "rxjs-compat": "^6.1.0",
    "supertest": "^3.0.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^5.0.0",
    "tsc": "~1.20150623.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "~5.9.1",
    "typescript": "~3.0.3",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0",
    "webpack-merge": "^4.1.4",
    "webpack-node-externals": "^1.7.2"
  }
}
